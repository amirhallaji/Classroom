<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="100"
    android:orientation="vertical"
    tools:context=".ProfileHomeworkActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="20"
        android:orientation="vertical"
        android:background="@color/green_light"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView_back"
            android:src="@drawable/arrow"
            />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/homework_name"
            android:layout_height="wrap_content"
            android:text="Homework Name"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/textView_public_comment"
            android:layout_height="wrap_content"
            android:hint="Add a Comment"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:orientation="horizontal"
        android:background="@color/light_green">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_show_assignment"
            android:text="assignment1"/>

        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="65"
        android:background="@color/white"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_attachment"
            android:hint="Attach Something"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_dark"
            android:text="Mark as Done"
            android:id="@+id/button_mark_as_done"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add a Private Comment"
        android:id="@+id/editText_private_comment"
        android:background="@color/colorPrimary"/>

</LinearLayout>